CFLAGS= 	@CFLAGS@ -Wall -Werror -ansi
LDFLAGS=	@LDFLAGS@
LIBS= 		@LIBS@
PREFIX=		@prefix@
SYSCONFDIR=	@sysconfdir@
LOCALSTATEDIR=	@localstatedir@
BINDIR=		@bindir@
MANDIR=		@mandir@
USER=		@USER@

MKDEP=		@MKDEP@
RM=		@RM@
SED=		@SED@
INSTALL=	@INSTALL@
LEX=		@LEX@
YACC=		@YACC@

OBJ= 		milter-greylist.o pending.o syncer.o except.o except_yacc.o
SRC= 		milter-greylist.c pending.c syncer.c except.c 
GENSRC=		except_yacc.c except_lex.c

milter-greylist:	${OBJ}
	${CC} -o milter-greylist ${OBJ} ${LDFLAGS} ${LIBS}

except_yacc.o:	except_yacc.c except_lex.c

all:	depend milter-greylist

install:	milter-greylist
	${INSTALL} -m 755 milter-greylist ${BINDIR}
	${INSTALL} -m 644 milter-greylist.8 ${MANDIR}/man8
	${INSTALL} -m 644 greylist.except /etc/mail
	${INSTALL} -d -m 755 -o ${USER} /var/milter-greylist

depend:
	${MKDEP} ${CFLAGS} ${SRC}

clean:
	${RM} -f milter-greylist ${OBJ} ${GENSRC}

realclean:	clean
	${RM} -Rf Makefile config.h config.log config.status configure \
		 autom4te.cache configure.lineno

.SUFFIXES:	.o .c .h .y .l
.l.c:
	lex -o${.TARGET} ${.IMPSRC}
.y.c:
	yacc -p`echo ${.TARGET}|${SED} 's/^\([^_]\{1,\}_\).*$$/\1/'` \
	    -o${.TARGET} ${.IMPSRC}

start:	milter-greylist
	{RM} -f /home/manu/milter-greylist.sock
	./milter-greylist -v -p milter-greylist.sock	
